# Backend ports
API_PORT=9000
FRONTEND_PORT=3000

# API base exposed to browsers (default keeps requests same-origin via Nginx proxy)
LEX_API_BASE_PUBLIC=https://api.lexicompanion.com

# External services reachable from inside the backend container
COMFY_URL=http://host.docker.internal:8188
OPENAI_API_BASE=http://host.docker.internal:8008/v1
OPENAI_API_KEY=dummy

# Optional overrides for values injected into runtime-config.js
COMFY_URL_PUBLIC=http://localhost:8188
VLLM_URL_PUBLIC=http://localhost:8008/v1

# Stable Diffusion backend selection
SD_BACKEND=sdxl  # options: sdxl | flux
FLUX_MODEL_VARIANT=kontext-dev
FLUX_MODELS_DIR=/mnt/data/comfy/models
FLUX_DIFFUSION_DIR=/mnt/data/comfy/models/diffusion_models
FLUX_TEXT_ENCODER_DIR=/mnt/data/comfy/models/text_encoders
FLUX_VAE_PATH=/mnt/data/comfy/models/vae/ae.safetensors
FLUX_CLIP_L=/mnt/data/comfy/models/text_encoders/clip_l.safetensors
FLUX_T5XXL=/mnt/data/comfy/models/text_encoders/t5xxl_fp8_e4m3fn.safetensors

# Gunicorn tuning
GUNICORN_WORKERS=2
GUNICORN_TIMEOUT=120

# Cloudflare Named Tunnel (optional)
# Tunnel credentials JSON must exist on the host at /root/.cloudflared/<UUID>.json
# Update docker/cloudflared/config.yml if the UUID differs.

# Traefik / ACME
# CF_DNS_API_TOKEN is only required when Traefik uses the Cloudflare DNS challenge.
# Leave it blank if your proxy issues certificates via http-01.
CF_DNS_API_TOKEN=REPLACE_ME
TRAEFIK_ACME_EMAIL=auston.horras@gmail.com
